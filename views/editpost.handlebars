<div class="blog post">
  <div class="item">
    <div class="topic-row">
      <div class="topic">
        <span>Edit Post</Nav></span>        
      </div>
    </div>
    <div class="blog-text">
     <form>
        <div class="post-form">
            <div class="form-group">
                <label for="topic">Topic</label>
                <input type="text" class="form-control" id="topic" value="{{post.topic}}">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" rows="3">{{post.content}}</textarea>
            </div>
            <div class="button-section">
                <button id='submit-post' class="submit-post" data-key="{{post.id}}">Update Post</button>
            </div>
        </div>          
     </form>     
    </div>
  </div> 
</div>